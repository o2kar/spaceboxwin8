<Application
    x:Class="SpaceBox.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpaceBox"
    xmlns:localData="using:SpaceBox.Data">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Stile, die allgemeine Aspekte von Aussehen und Verhalten der Plattform definieren
                    Erforderlich für Visual Studio-Projekt und Elementvorlagen
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Anwendungsspezifische Ressourcen -->

            <x:String x:Key="AppName">SpaceBox</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>

